#
# i3blocks config file
#

# Global properties.
#
# Blocks without command property will execute
# a user script with the same name as the block name.
#
# Note: Scripts should have the execute permission.
#
command=$USER_SCRIPTS/$BLOCK_NAME
separator_block_width=15
markup=none

# TODO
[mute-indicator]
full_text=

[screenshot]
full_text=

[inet]
interval=60

[caps-lock]
command=xset -q | grep 'Caps Lock' | sed 's/[\t ][\t ]*/ /g' | cut -d' ' -f5 | sed 's/^/CAPS /g'
interval=once
signal=10
min_width=CAPS off

[battery]
interval=30
BAT_NUMBER=0
LABEL=⚡

[battery]
interval=30
BAT_NUMBER=1
LABEL=⚡

[date]
command=date +"%a, %d %b"
interval=1

[time]
command=date +"%H:%M:%S  "
interval=1
