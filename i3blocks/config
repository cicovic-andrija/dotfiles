#
# i3blocks config file
#

# Global properties.
#
# Blocks without command property will execute
# a script with the same name as the block name.
#
# Note: Scripts should have the execute permission.
#
command=~/.config/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[caps-lock]
command=xset -q | grep 'Caps Lock' | sed 's/[\t ][\t ]*/ /g' | cut -d' ' -f5 | sed 's/^/CAPS /g'
interval=once
signal=10
min_width=CAPS off
color=#4c7899

[battery]
interval=30
LABEL=âš¡

[date]
command=date +"%a, %d %b"
interval=1
color=#4c7899

[time]
command=date +"%H:%M:%S"
interval=1

[inet]
interval=15
color=#4c7899
